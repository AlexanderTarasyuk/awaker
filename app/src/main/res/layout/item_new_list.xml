<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="newsItem"
            type="com.future.awaker.data.News" />

        <variable
            name="listener"
            type="com.future.awaker.base.listener.OnItemClickListener" />

        <variable
            name="holder"
            type="com.future.awaker.news.NewListAdapter.NewHolder" />
    </data>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/white"
        android:onClick="@{(view) -> listener.onItemClick(view, holder.getAdapterPosition(), newsItem)}"
        android:stateListAnimator="@drawable/lift_on_touch"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/icon_fl"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    app:imageThumbUrl="@{newsItem.cover_url.ori}"/>

                <ImageView
                    android:src="@drawable/img_mask"
                    android:scaleType="fitXY"
                    android:layout_width="90dp"
                    android:layout_height="60dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon_fl"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/icon_fl"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{newsItem.title}"
                android:textColor="#FF383838"
                android:textSize="14sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/icon_fl"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/title_tv"
                android:ellipsize="end"
                android:maxEms="16"
                android:maxLines="1"
                android:text="@{newsItem.category_title}"
                android:textColor="#FF8A8A8A"
                android:textSize="12sp" />

            <TextView
                android:layout_below="@+id/title_tv"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxEms="16"
                android:maxLines="1"
                android:text="@{newsItem.comment}"
                android:textColor="#FF8A8A8A"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_gravity="bottom"
            android:background="@color/black12"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
    </android.support.v7.widget.CardView>
</layout>