<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:soulwolf="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="videoItem"
            type="com.future.awaker.data.Video" />

        <variable
            name="listener"
            type="com.future.awaker.base.listener.OnItemClickListener" />

        <variable
            name="holder"
            type="com.future.awaker.video.VideoListAdapter.VideoHolder" />
    </data>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{(view) -> listener.onItemClick(view, holder.getAdapterPosition(), videoItem)}"
        android:stateListAnimator="@drawable/lift_on_touch"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        tools:targetApi="lollipop">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <net.soulwolf.widget.ratiolayout.widget.RatioImageView
                android:id="@+id/icon_iv"
                soulwolf:datumRatio="datumWidth"
                soulwolf:widthRatio="1.0"
                soulwolf:heightRatio="0.6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{videoItem.title}"
                android:textColor="#FF383838"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>