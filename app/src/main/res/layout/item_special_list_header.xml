<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:soulwolf="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.future.awaker.video.SpecialListViewModel"/>
    </data>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <net.soulwolf.widget.ratiolayout.widget.RatioImageView
            soulwolf:datumRatio="datumWidth"
            soulwolf:widthRatio="16"
            soulwolf:heightRatio="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:imageUrl="@{viewModel.url}"/>

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="10dp"
            android:textSize="26sp"
            android:textColor="#383838"
            android:text="@{viewModel.title}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:ellipsize="end"
            android:layout_margin="10dp"
            android:lineSpacingExtra="13dp"
            android:textSize="15sp"
            android:textColor="#383838"
            android:text="@{viewModel.content}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="10dp"
            android:background="@color/black12"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
    </LinearLayout>
</layout>

